<h1>Mis Postulaciones</h1>
<% if @publications.any? %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>

      <th scope="col">Cargo</th>
      <th scope="col">Descripción</th>
    </tr>
  </thead>
  <tbody>
    <% @publications.each do |publication| %>
    <tr>
        <th scope="row">#</th>
        <td><%= link_to publication.cargo, publication %></td>
        <td><%= publication.description %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<% else %>
  <p>No has postulado a ninguna publicación aún.</p>
<% end %>

